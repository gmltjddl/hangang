<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.LikeDao">

  <resultMap type="like" id="likeMap">
    <id column="like_id" property="id"/>
    <result column="post_id" property="postId"/>
    
    <association property="user" javaType="member">
      <id column="user_id" property="no"/>
      <result column="name" property="name"/>
    </association>
  </resultMap>

  <insert id="insertLike" parameterType="like">
    insert into hms_like (post_id, user_id)
    values (#{postId}, #{user.no})
  </insert>

  <select id="findLikesByPostId" resultMap="likeMap" parameterType="int">
    select
      l.like_id,
      l.post_id,
      l.user_id,
      m.name
    from
      hms_like l
      inner join hms_mem m on l.user_id = m.member_id
    where
      l.post_id = #{postId}
  </select>

  <select id="findLikeByPostIdAndUserId" resultMap="likeMap" parameterType="like">
    select
      l.like_id,
      l.post_id,
      l.user_id,
      m.name
    from
      hms_like l
      inner join hms_mem m on l.user_id = m.member_id
    where
      l.post_id = #{postId}
      and l.user_id = #{user.no}
  </select>

  <delete id="deleteLike" parameterType="like">
    delete from hms_like
    where post_id = #{postId}
    and user_id = #{user.no}
  </delete>

</mapper>
