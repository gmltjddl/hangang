<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.CommentDao">

  <resultMap type="comment" id="commentMap">
     <id column="comment_no" property="no"/>
    <result column="content" property="content"/>
    <result column="created_date" property="createdDate"/>
    
    <association property="writer" javaType="member">
      <id column="writer" property="no"/>
      <result column="name" property="name"/>
      <result column="nickName" property="nickName"/>
    </association>
  </resultMap>

  <insert id="insert" parameterType="comment" 
  useGeneratedKeys="true" keyProperty="no" keyColumn="comment_no">
    insert into hms_comm(content,writer)
    values(#{content},#{writer.no})
  </insert>
  <select id="findAll" resultMap="commentMap">
    select 
      cm.comment_no, 
      cm.writer, 
      cm.content,
      cm.created_date 
    from 
      hms_comm cm
      outer join hms_gall b 
    order by 
      comment_no desc
  </select>
  <select id="findByNo" parameterType="int" resultMap="commentMap">
    select 
      comment_id,
      email,
      name,
      nick,
      tel,
      intro,
      hob 
      created_date 
    from 
      hms_mem
    where 
      comment_id=#{no}
  </select>
  
  <update id="update" parameterType="comment">
    update hms_mem set
      email=#{email}, 
      name=#{name}, 
      nick=#{nickName},
      tel=#{tel}
    where comment_id=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from hms_mem
    where comment_id=#{no}
  </delete>
  
  
    <select id="findByEmailAndPassword" parameterType="map" resultMap="commentMap">
    select
      comment_id,
      email,
      name,
      nick,
      tel,
      intro,
      hob,
      created_date
    from 
      hms_mem

    where 
      email = #{email} and pwd = sha2(#{password},256)
  </select>

  <select id="findByEmail" parameterType="string" resultMap="commentMap">
    select
      comment_id,
      email,
      name,
      nick,
      tel,
      intro,
      hob,
      created_date
    from 
      hms_mem 
    where 
      email = #{email}
  </select>
</mapper>





